{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vitest/globals"],

    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],
      "@ui/*": ["components/ui/*"],
      "@layouts/*": ["components/layouts/*"],
      "@utils/*": ["utils/*"],
      "@screens/*": ["screens/*"],
      "@store": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@api": ["api/*"],
      "@services/*": ["services/*"],
      "@Camera/*": ["screens/Camera/*"],
      "@MediaDevicesInfo/*": ["screens/MediaDevicesInfo/*"],
      "@ActivityTracer/*": ["screens/ActivityTracer/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
